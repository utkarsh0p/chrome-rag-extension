{
  "manifest_version": 3,
  "name": "Page Chat",
  "version": "1.0",

  "description": "Ask questions about the current page",

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>",
    "http://localhost:5000/*"
  ],

  "action": {
    "default_popup": "popup/popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page":"options/option.html"
}
